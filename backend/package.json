{
  "name": "@invfriend/backend",
  "version": "1.0.0",
  "description": "INVFriend - Node.js Backend",
  "main": "dist/index.js",
  "engines": {
    "node": "20"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
